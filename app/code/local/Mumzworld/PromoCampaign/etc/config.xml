<?xml version="1.0"?>
<config>
    <modules>
        <Mumzworld_PromoCampaign>
            <version>0.1.0</version>
        </Mumzworld_PromoCampaign>
    </modules>
    <global>
        <models>
            <promocampaign>
                <class>Mumzworld_PromoCampaign_Model</class>
                <resourceModel>promocampaign_resource</resourceModel>
            </promocampaign>
            <promocampaign_resource>
                <class>Mumzworld_PromoCampaign_Model_Resource</class>
                <entities>
                    <promotion>
                        <table>mumzworld_promocampaign_promotion</table>
                    </promotion>
                    <coupon>
                        <table>mumzworld_promocampaign_coupon</table>
                    </coupon>
                </entities>
            </promocampaign_resource>
        </models>
        <helpers>
            <promocampaign>
                <class>Mumzworld_PromoCampaign_Helper</class>
            </promocampaign>
        </helpers>
        <blocks>
            <promocampaign>
                <class>Mumzworld_PromoCampaign_Block</class>
            </promocampaign>
        </blocks>
        <resources>
            <promocampaign_setup>
                <setup>
                    <module>Mumzworld_PromoCampaign</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </promocampaign_setup>
            <promocampaign_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </promocampaign_write>
            <promocampaign_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </promocampaign_read>
        </resources>
        <template>
            <email>
                <promocampaign_promo_email translate='label' module='promocampaign'>
                    <label>Promo Email</label>
                    <file>mumzworld_promocampaign_promo.html</file>
                    <type>html</type>
                </promocampaign_promo_email>
            </email>
        </template>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Mumzworld_PromoCampaign before="Mage_Adminhtml">Mumzworld_PromoCampaign_Adminhtml</Mumzworld_PromoCampaign>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <promocampaign>
                    <file>promocampaign.xml</file>
                </promocampaign>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <promo_campaign>
            <emails>
                <from>saraelsayedahmed@gmail.com</from>
                <email_template>Promo Email</email_template>
            </emails>
        </promo_campaign>
    </default>
    <crontab>
        <jobs>
            <promocampaign_sendpromo>
                <schedule><cron_expr>0 2 * * *</cron_expr></schedule>
                <run>
                    <model>promocampaign/observer::sendPromo</model>
                </run>
            </promocampaign_sendpromo>
        </jobs>
    </crontab>
</config> 